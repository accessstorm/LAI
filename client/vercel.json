{
  "version": 2,
  "builds": [
    {
      "src": "client/package.json",
      "use": "@vercel/create-react-app",
      "config": {
        "distDir": "build",
        "NODE_ENV": "production",
        "public": "public",
        "installCommand": "npm install",
        "buildCommand": "npm run build"
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ]
}
